@using MedexWebApps.ViewModels
@using MedexWebApps.Models
@model ITSchedViewModel
@{
    ViewBag.Title = "Index";
}
<h2>IT Schedule</h2>
<div class="alert alert-dismissible alert-success">
    Effective from <b>@Model.SchedStartDate.ToString("MMMM d yyyy")</b> to <b>@Model.SchedEndDate.ToString("MMMM d yyyy")</b>
</div>
    <div>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>IT</th>
                    <th>Weekdays</th>
                    <th>Saturday</th>
                </tr>
            </thead>
            @foreach (IT_Weekly_Shift itWeeklySched in Model.ITWeeklyShift)
            {
                <tr>
                    <td>@itWeeklySched.IT_Staff.IT_Name</td>
                    <td>@itWeeklySched.Shift.Shift1</td>
                    <td>@if (itWeeklySched.Shift_ID == 1)
                        {<p>8AM - 6PM</p>}
                    else
                        {<p>Off</p>}
                    </td>
                </tr>
            }
        </table>
    </div>
